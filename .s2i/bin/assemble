#!/bin/bash

echo "---> Assemble START"

# restore build artifacts
if [ "$(ls /tmp/s2i/artifacts/ 2>/dev/null)" ]; then
    mv /tmp/artifacts/* $HOME/
fi

# move the application source
mv /tmp/src/* $HOME/

# set up environment
python3 -m venv .venv
source .venv/bin/activate
pip install -U pip
ls -la

echo "---> Assemble END"